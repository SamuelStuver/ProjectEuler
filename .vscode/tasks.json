{
    "tasks": [
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "gcc -g -pedantic -Wall -Wextra -Wwrite-strings -Werror",
            "args": [
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            }
        }
    ],
    "version": "2.0.0"
}